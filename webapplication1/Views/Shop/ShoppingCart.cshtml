@model IEnumerable<WebApplication1.Controllers.ShopController.CartItem>

@{
    ViewBag.Title = "ShoppingCart";
}

<h2>Shopping cart</h2>

<table class="table">
    <tr>
        <th>
            Product
        </th>
        <th>
            Price
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Price) zł
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>

                @Html.ActionLink("Delete", "Delete", new { id = item.Item.ItemID })
            </td>
        </tr>
    }
</table>
<hr />
@Html.ActionLink("Finish order", "Order", "Shop", null)
